<div class="container">
  <div class="row">
	<h3>購入者：<%= @order.first_name %><%= @order.last_name %></h3>

	<h3>購入日：<%= @order.created_at.strftime("%Y-%m-%d %H:%M") %></h3>

	<h3>送付先：<%= @order.address %></h3>

	<h3>ステータス：<%= @order.status %></h3>
  </div>
</div>
<div class="container">
　　<div class="row">
		<table class="table">
		　　<thead></thead>
			<tbody>
				<% @order.order_products.each do |product| %>

				    <th><%= product.cd.title %></th>

					<th><%= product.order_count %>個</th>

					<th>小計：￥<%= product.subtotal_price %></th>

				  </tr>
				<% end %>
					<tr>
						<th>購入金額合計：<%= @order.total_price %>(税込)</th>

						<th>送料：￥<%= @order.postage %>を含む</th>
					</tr>
			</tbody>
		</table>
	</div>
</div>