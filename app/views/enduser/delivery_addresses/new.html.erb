<h2>配送先住所の登録</h2>

<%= form_for @delivery_address, url: enduser_delivery_addresses_path do |f| %>


    <br>

  <div class="form-main">

    <div class="form-group1-left">
      <label class="form-sub">受取人の苗字</label>&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;<label class="form-sub">受取人の名前</label>
      <br>
      <%= f.text_field :first_name %>&emsp;&emsp;<%= f.text_field :last_name %>
    </div>

    <br>

    <div class="form-group1">
      <label class="form-sub">郵便番号</label>
      <br>
      <%= f.text_field :postcode  %>
    </div>

    <br>
    <br>

    <div class="form-group1">
      <label class="form-sub">住所</label>
      <br>
      <%= f.text_area :address  %>
    </div>

    <br>

    <div class="form-group2">
       <%= f.submit "登録する" %>
    </div>
  </div>

<% end %>