<h3>ユーザー情報編集</h3>

<%= form_for(@enduser) do |f| %>

	<div style="float:left;">
	 	<label for="first_name">苗字</label>
	 	<%= f.text_field :苗字 %>
    </div>

    <div style="float:left;">
	 	<label for="last_name">名前</label>
	 	<%= f.text_field :名前 %>
    </div>


    <div style="clear:both;">
 　 </div>

    <div style="float:left;">
       <%= f.label :苗字[フリガナ] %><br />
       <%= f.text_field :reading_first_name, autofocus: true, autocomplete: "苗字[フリガナ]" %>
 　 </div>

    <div style="float:left;">
       <%= f.label :名前[フリガナ] %><br />
       <%= f.text_field :reading_last_name, autofocus: true, autocomplete: "名前[フリガナ]" %>
 　 </div>


    <div style="clear:both;">
       <%= f.label :郵便番号 %><br />
       <%= f.text_field :postcode, autofocus: true, autocomplete: "郵便番号" %>
 　 </div>


    <div class="field">
      <%= f.label :住所 %><br />
      <%= f.text_area :address, autofocus: true, autocomplete: "住所"%>
 　 </div>

    <div class="field">
      <%= f.label :電話番号 %><br />
      <%= f.text_field :phone_number, autofocus: true, autocomplete: "電話番号"%>
 　 </div>


    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email"%>
 　 </div>

    <div class="actions">
    <%= f.submit "update Enduser" %>
    </div>