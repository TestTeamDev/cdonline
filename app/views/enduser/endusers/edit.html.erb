<div>
<% if @enduser.errors.any? %>
          <div id="error_explanation" class="alert alert-danger">
            <p><%= @enduser.errors.count %>errors prohibited this obj from being saved</p>
           <ul>
              <% @enduser.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
           </ul>
          </div>
<% end %>
</div>






<div class="editbody">


<h2>ユーザー情報編集</h2>

<%= form_for(@enduser, url:enduser_enduser_path) do |f| %>

	<div class="nameform" style="float:left;">
	 	<%= f.label :苗字 %><br />
	 	<%= f.text_field :first_name %>
  </div>



    <div class="nameform" style="float:left;">
	 	<%= f.label :名前 %><br />
	 	<%= f.text_field :last_name %>
    </div>


        <div style="clear:both;">
        </div>

    <div style="float:left;">
       <%= f.label :苗字「フリガナ」 %><br />
       <%= f.text_field :reading_first_name, autofocus: true, autocomplete: "苗字[フリガナ]" %>
 　 </div>

    <div style="float:left;">
       <%= f.label :名前「フリガナ」 %><br />
       <%= f.text_field :reading_last_name, autofocus: true, autocomplete: "名前[フリガナ]" %>
 　 </div>


    <div class="form" style="clear:both;">
       <%= f.label :郵便番号 %><br />
       <%= f.text_field :postcode, autofocus: true, autocomplete: "郵便番号" %>
 　 </div>


    <div class="form">
      <%= f.label :住所 %><br />
      <%= f.text_area :address, autofocus: true, autocomplete: "住所"%>
 　 </div>

    <div class="form">
      <%= f.label :電話番号 %><br />
      <%= f.text_field :phone_number, autofocus: true, autocomplete: "電話番号"%>
 　 </div>


    <div class="form">
      <%= f.label :Eメール %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "Eメール"%>
 　 </div>

    <div class="actions">
    <h3><%= f.submit "更新" %></h3>
    </div>

<% end %>

</div>