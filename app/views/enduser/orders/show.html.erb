<div class ="left-space">

	<br>

	<h3>購入者：<%= @order.first_name %><%= @order.last_name %> 様</h3>

	<h3>購入日：<%= @order.created_at.strftime("%Y-%m-%d") %></h3>

	<h3>送付先：<%= @order.address %></h3>

	<h3>ステータス：<%= @order.status %></h3>


	<div class="contaiber">
	　　<div class="row">
		  <div class="col-lg-10">
			<table class="table">
			　　<thead></thead>
				<tbody>
					<% @order.order_products.each do |product| %>

					    <th><h4><%= product.cd.title %></h4></th>

						<th><h4><%= product.order_count %>個</h4></th>

						<th><h4>小計：￥<%= product.subtotal_price %></h4></th>

					  </tr>
					<% end %>
						<tr>
							<th><h4>購入金額合計：￥<%= @order.total_price %>(税込+送料)</h4></th>

							<th><h4>送料：￥<%= @order.postage %></h4></th>
						</tr>
				</tbody>
			</table>
		  </div>
		</div>
	</div>
</div>
