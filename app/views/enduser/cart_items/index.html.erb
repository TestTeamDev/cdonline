<h2>カート一覧</h2>
<div class="container">
  <div class="row">
  	<div class="col-lg-12">
  	  <table class="table">
  	  	 <thead>
  	  	   <tr>
  	  	   	<th></th><!-- ジャケット画像 -->
  	  	   	<th></th><!-- タイトル -->
  	  	   	<th></th><!-- アーティスト -->
  	  	   	<th></th><!-- 金額（税込） -->
  	  	   	<th></th><!-- 数量（変更可能） -->
  	  	   	<th></th><!-- 削除 -->
  	  	   </tr>
  	  	 </thead>
  	  	 <tbody>
  	  	 	<% @cart_items.each do|item| %>
  	  	 	   <tr>
  	  	 	   	 <th>
  	  	 	   	 	<%= attachment_image_tag item.cd, :image, style: "width: 100px; height: 100px;", fallback: "no_image.png" %>
  	  	 	   	 </th>
  	  	 	   	 <th>
  	  	 	   	 	<%= item.cd.title %>
  	  	 	   	 </th>
  	  	 	   	 <th>
  	  	 	   	 	<%= item.cd.artist.name %>
  	  	 	   	 </th>
  	  	 	   	 <th>
  	  	 	   	 	<%= item.cd.price %>円（税込）
  	  	 	   	 </th>
  	  	 	   	 <th>
  	  	 	   	 </th>
  	  	 	   	 <th>
  	  	 	   	 	<%= link_to '削除',enduser_cart_item_path(item.cd.id),method: :delete, class:"btn btn-default" %>
  	  	 	   	 </th>
  	  	 	   </tr>
  	  	 	<% end %>
  	  	 </tbody>
  	  </table>
  	</div>
  </div>
</div>