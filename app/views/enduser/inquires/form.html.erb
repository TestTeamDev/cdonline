<div class="form">

	<h1>お問い合わせフォーム</h1>

	<%= form_for @inquire, url:admin_inquires_path do |f| %>

	<p>名前<br>
	<%= f.text_field :name %></p>

	<p>メールアドレス<br>
	<%= f.text_field :mail %></p>

	<p>件名<br>
	<%= f.text_field :title %></p>

	<p>お問い合わせ内容<br>
	<%= f.text_area :body %></p>

	<%= f.submit '送信', class: "btn btn-primary", style: "display: block;" "margin: 0 auto;" %>

	<% end %>

</div>