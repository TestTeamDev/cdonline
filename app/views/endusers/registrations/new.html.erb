<div class="form-body">
<h2>アカウントを作成</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div style="float:left;">
    <%= f.label :苗字 %><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "苗字" %>
  </div>

  <div style="float:left;">
    <%= f.label :名前 %><br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: "名前" %>
  </div>

  <div style="clear:both;">
  </div>

    <div style="float:left;">

   <%= f.label :苗字「フリガナ」 %><br />
    <%= f.text_field :reading_first_name, autofocus: true, autocomplete: "苗字(フリガナ)" %>
  </div>

  <div style="float:left;">
    <%= f.label :名前「フリガナ」 %><br />
    <%= f.text_field :reading_last_name, autofocus: true, autocomplete: "名前(フリガナ)" %>
  </div>








   <div style="clear:both;">
    <%= f.label :郵便番号 %><br />
    <%= f.text_field :postcode, autofocus: true, autocomplete: "郵便番号" %>
  </div>

  <div class="field">
    <%= f.label :住所 %><br />
    <%= f.text_area :address, autofocus: true, autocomplete: "住所" %>
  </div>


  <div class="field">
    <%= f.label :電話番号 %><br />
    <%= f.text_field :phone_number, autofocus: true, autocomplete: "電話番号" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "endusers/shared/links" %>



</div>